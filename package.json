{
  "name": "kkj-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Japanese Government Procurement Portal API (官公需情報ポータルサイトAPI)",
  "type": "module",
  "bin": {
    "kkj-mcp": "./build/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x build/index.js && mkdir -p build/knowledge && cp src/knowledge/*.md build/knowledge/",
    "build:workers": "tsc && mkdir -p build/knowledge && cp src/knowledge/*.md build/knowledge/",
    "watch": "tsc --watch",
    "start": "node build/index.js",
    "dev:workers": "wrangler dev",
    "deploy:workers": "wrangler deploy",
    "inspector": "npx @modelcontextprotocol/inspector node build/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch"
  },
  "files": [
    "build"
  ],
  "keywords": [
    "mcp",
    "japanese-government",
    "procurement",
    "api",
    "official-procurement"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "fast-xml-parser": "^5.3.2",
    "hono": "^4.6.14",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250110.0",
    "@types/node": "^22.10.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "typescript": "^5.7.0",
    "vitest": "^4.0.16",
    "wrangler": "^4.54.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
